@{
    ViewData["Title"] = "Home Page";
}
@model Movie

<div class="text-center row">
    <div class="col-6">
        <h2 class="text-info">Add a Movie</h2>
        <form action="addMovie" method="post">
            <div class="form-group">
                <label for="Title">Title</label>
                <input asp-for="Title" placeholder="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label for="Genre">Genre</label>
                <input asp-for="Genre" placeholder="Genre" class="form-control">
                <span asp-validation-for="Genre" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label for="ReleseYear">Relese Year</label>
                <input asp-for="ReleseYear" placeholder="ReleseYear" class="form-control">
                <span asp-validation-for="ReleseYear" class="text-danger" ></span>
            </div>
            <input type="submit" value="Add Movie" class="btn btn-info">
        </form>
    </div>
    <div class="col-6">
        <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="text-info"><h4>List of Movies</h4></th>
                            <th scope="col" class="text-info"><h4>Year of Relese</h4></th>
                        </tr>
                    </thead>
        @{
            foreach(Movie m in ViewBag.allMovies)
            {
                
            <tbody>
                <tr>
                    <td scope="row" ><h6><a href="/movie/@m.MovieId">@m.Title</a></h6>  </td>
                    <td scope="row" ><h6>@m.ReleseYear</h6></td>
                </tr>
            </tbody>
            }
        }
        </table>
    </div>
</div>

